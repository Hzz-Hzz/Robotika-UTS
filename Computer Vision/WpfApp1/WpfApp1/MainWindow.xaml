<Window x:Class="WpfApp1.MainWindow"
        SourceInitialized="MainWindow_OnSourceInitialized"
        Closing="MainWindow_OnClosing"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:ui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.Platform.NetCore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <UniformGrid >
            <TextBlock Text="{Binding status}" />
            <TextBlock Name="colorInformation" TextAlignment="Right"/>
        </UniformGrid>
        <Image Grid.Row="1" Name="processedImage" Source="{Binding imageSource}" MouseMove="UIElement_OnMouseMove"></Image>
        <Image Grid.Row="2" Name="originalImage" Source="{Binding imageSourceOriginal}" MouseMove="UIElement_OnMouseMove" ></Image>

        <TextBlock Grid.Row="3" Text="{Binding status}">---</TextBlock>
    </Grid>
</Window>
